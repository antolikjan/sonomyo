---
// Page Header Section (Centered title, left-aligned text)
// ------------
// Description: Page header with centered title and left-aligned text.

// Components
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'

// Props
type Props = {
  id?: string
  title?: string
  text?: string
  classes?: string
}

const { id = 'intro', title, text, classes } = Astro.props
---

<Section id={id} classes={`bg-neutral-50 dark:bg-neutral-900 ${classes ?? ''}`}>
  <Row>
    <Col span="12">
      <header class="page-header">
        <h2 class="page-header__title" set:html={title} />
        <p class="page-header__text" set:html={text} />
      </header>
    </Col>
  </Row>
</Section>

<style>
.page-header {
  @apply mx-auto max-w-3xl;
}

.page-header__title {
  @apply text-center text-primary-700 dark:text-primary-400;
}

.page-header__text {
  @apply mt-4 text-left text-lg leading-relaxed text-neutral-700 dark:text-neutral-300;
}
</style>
