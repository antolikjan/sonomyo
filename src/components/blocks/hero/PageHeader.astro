---
// Page Header Section
// - centered title
// - left-aligned text
// - optional image above title
// - configurable background color

import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'

type ImageProps = {
  src: string
  width?: number
  height?: number
  alt?: string
}

type Props = {
  id?: string
  title?: string
  text?: string
  image?: ImageProps
  bgColor?: string
  classes?: string
}

const {
  id = 'intro',
  title,
  text,
  image,
  bgColor,
  classes
} = Astro.props
---

<Section
  id={id}
  classes={classes}
  style={bgColor ? `background-color: ${bgColor};` : undefined}
>
  <Row>
    <Col span="12">
      <header class="page-header">
        {image?.src && (
          <img
            src={image.src}
            width={image.width}
            height={image.height}
            alt={image.alt ?? ''}
            class="page-header__image"
            loading="lazy"
          />
        )}

        <h2 class="page-header__title" set:html={title} />
        <p class="page-header__text" set:html={text} />
      </header>
    </Col>
  </Row>
</Section>

<style>
.page-header {
  @apply mx-auto max-w-3xl;
}

.page-header__image {
  @apply mx-auto mb-8 block max-h-48 lg:max-h-96 w-auto;
}


.page-header__title {
  @apply text-center text-primary-700 dark:text-primary-400 mb-8;
}

.page-header__text {
  @apply mt-4 text-left text-lg leading-relaxed text-neutral-700 dark:text-neutral-300;
}
</style>
