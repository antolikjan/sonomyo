---
// Spacer
type Props = {
  size?: '0' | '2' | '3' | '4' | '6' | '8' | '12' | '16' | '24' | '32'
  desktopSize?: '0' | '2' | '3' | '4' | '6' | '8' | '12' | '16' | '24' | '32'
  bg?: string
}

const {
  size = '6',
  desktopSize = '12',
  bg
} = Astro.props
---

<div
  class:list={[
    { ['h-' + size]: true },
    { ['lg:h-' + desktopSize]: true },
    bg
  ]}
/>
