---
// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - UI
import Hero from '../../components/blocks/hero/PageHeader.astro'
import Price from '../../components/blocks/pricing/PricingColumns.astro'

// - SEO
const SEO = {
	title: 'Sonomyo | check out our pricing',
	description:
		'The pricing of services provided by the Sonomyo myfunctional therapy practice.'
}

export function getStaticPaths() {
  return [
    { params: { lang: 'cs' } },
    { params: { lang: 'en' } },
  ];
}

const lang = Astro.params.lang === 'en' ? 'en' : 'cs';

const header = {
		title: Astro.params.lang === 'en' ? 'Prices of our services:' : 'Cenník našich služeb:',
		text:  Astro.params.lang === 'en' ? 'We guarentee the service prices for the duration of your therapy.' : 'Garantujeme výši poplatků v průběhu terapie.'
	}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<Price />
</Layout>
