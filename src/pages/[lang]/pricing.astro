// Content
// - SEO
const SEO = {
	title: 'Sonomyo | check out our pricing',
	description:
		'The pricing of services provided by the Sonomyo myfunctional therapy practice.'
}
// - Page Header
const header = {
	title: 'Prices of our services:',
	text: 'We guarentee the service prices for the duration of your therapy.'
}

export function getStaticPaths() {
  return [
    { params: { lang: 'cs' } },
