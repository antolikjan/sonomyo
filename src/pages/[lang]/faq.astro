---
// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - UI
import Hero from '../../components/blocks/hero/PageHeader.astro'
import FAQ from '../../components/blocks/FAQ/FaqSticky.astro'
// Data
import faqData from '../../data/json-files/faqData.json'

// - SEO
const SEO = {
	title: 'Sonomyo | Get Your Questions Answered with a Smile',
	description:
		'Dive into the Sonomyo FAQ to get answers to all your questions about pricing, services, ultrasound tongue imaging and more. Discover how SonoMyo can improve your wellbeing.'
}

export function getStaticPaths() {
  return [
    { params: { lang: 'cs' } },
    { params: { lang: 'en' } },
  ];
}

const lang = Astro.params.lang === 'en' ? 'en' : 'cs';
const data = faqData[lang];
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={data["title"]} text={data["text"]} />
	<FAQ
		title={data["faq_groups"]["common"]["title"]}
		text={data["faq_groups"]["common"]["text"]}
		data={data["faq_groups"]["common"]["list"]}
	/>
	<FAQ
		title={data["faq_groups"]["ultrasound"]["title"]}
		text={data["faq_groups"]["ultrasound"]["text"]}
		data={data["faq_groups"]["ultrasound"]["list"]}
	/>
</Layout>
