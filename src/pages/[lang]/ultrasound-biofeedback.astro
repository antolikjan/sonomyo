---
// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - UI
import Hero from '../../components/blocks/hero/PageHeader.astro'
import { ui } from '../../i18n/ui'

import HighlightBlock from '../../components/blocks/highlights/HighlightRow.astro'
import CTA from '../../components/blocks/testimonials/CTA.astro'
import Spacer from '../../components/ui/Spacer.astro'


import ultrasound_feedback from '../../assets/images/ultrasound_feedback.png'
import ultrasound_session from '../../assets/images/ultrasound_session.png'
import collaboration from '../../assets/images/collaboration.png'


// - SEO
const SEO = {
	title: 'Sonomyo | Ulrasound guided myofunctional therapy practice.',
	description:
		'Sonomyo is a ulrasound guided myofunctional therapy practice.'
}

export function getStaticPaths() {
  return [
    { params: { lang: 'cs' } },
    { params: { lang: 'en' } },
  ];
}

const lang = Astro.params.lang === 'en' ? 'en' : 'cs';
const t = ui[lang].ultrasound_imaging

---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={t["title"]} text={t["text"]} image={ultrasound_feedback} bgColor='#d4e6fe'/>
	<HighlightBlock image={ultrasound_session} title={t["ultra_title"]} text={t["ultra"]}/>
	<HighlightBlock image={collaboration} title={t["collaboration_title"]} text={t["collaboration"]} bgColor='#d4e6fe' imagePosition='left'/>
	<Spacer size="12" desktopSize="24" bg="bg-[#d4e6fe]" />
    <CTA/>
</Layout>
