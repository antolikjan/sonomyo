---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero.astro'
import ContactCards from '../components/blocks/contact/ContactCards.astro'

// Content
// - SEO
const SEO = {
	title: 'Sonomyo | Get in Touch.',
	description:
		'Have questions or want to schedule an appointment? Contact Sonomyo today.'
}
// - Page Header
const header = {
	title: 'Contact <strong>Sonomyo</strong> for appointments or other inquiries.',
	text: ""
}
---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
	<ContactCards classes="dark:bg-neutral-950/80" />
</Layout>
